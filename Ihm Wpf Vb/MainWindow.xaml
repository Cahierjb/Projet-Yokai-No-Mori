<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ihm_Wpf_Vb"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel HorizontalAlignment="Left" LastChildFill="False" VerticalAlignment="Top">
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="lblPrenom" Content="Prénom :"  VerticalAlignment="Center"/>
                <TextBox x:Name="tbPrenom"  TextWrapping="Wrap" Text="toto" VerticalAlignment="Center" Width="240"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label x:Name="lblMsg" Content=""  VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnOK" Content="OK" Width="75" Click="btnOK_Click"/>
            </StackPanel>

        </StackPanel>

    </DockPanel>
</Window>
